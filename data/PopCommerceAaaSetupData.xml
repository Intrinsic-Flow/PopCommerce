<entity-facade-xml type="seed">
    <moqui.screen.SubscreensItem screenLocation="component://webroot/screen/webroot.xml"
        subscreenName="popc" userId="_NA_" subscreenLocation="component://PopCommerce/screen/PopCommerceRoot.xml"
        menuTitle="POP Commerce" menuIndex="9" menuInclude="N"/>

    <!-- authz/permission for ALL users -->
    <moqui.security.ArtifactGroup artifactGroupId="POPC" description="POP Commerce App (via root screen)"/>
    <moqui.security.ArtifactGroupMember artifactGroupId="POPC" artifactName="component://PopCommerce/screen/PopCommerceRoot.xml"
        artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="POPC_ALL" userGroupId="ALL_USERS" artifactGroupId="POPC"
        authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>

    <!-- Theme Type and Default Theme -->
    <moqui.basic.Enumeration description="POP Commerce Theme Type" enumId="STT_POP_COMMERCE" enumTypeId="ScreenThemeType"/>
    <moqui.screen.ScreenTheme screenThemeId="POPC_DEFAULT" screenThemeTypeEnumId="STT_POP_COMMERCE"
                              description="POP Commerce Default Theme"/>
    <!-- NOTE: these default resources are from the Moqui default runtime webroot component -->
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="1" resourceTypeEnumId="STRT_STYLESHEET"
                         resourceValue="/css/smoothness/jquery-ui-1.8.21.css"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="2" resourceTypeEnumId="STRT_STYLESHEET"
                         resourceValue="/css/default.css"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="5" resourceTypeEnumId="STRT_SCRIPT"
                         resourceValue="/js/jquery-1.7.2.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="6" resourceTypeEnumId="STRT_SCRIPT"
                         resourceValue="/js/jquery-ui-1.8.21.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="7" resourceTypeEnumId="STRT_SCRIPT"
                         resourceValue="/js/jquery-ui-timepicker-addon-1.0.0.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="8" resourceTypeEnumId="STRT_SCRIPT"
                         resourceValue="/js/jquery-ui-combobox.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="9" resourceTypeEnumId="STRT_SCRIPT"
                         resourceValue="/js/jquery-validate-1.9.0.min.js"/>
    <moqui.screen.ScreenThemeResource screenThemeId="POPC_DEFAULT" sequenceNum="99" resourceTypeEnumId="STRT_SHORTCUT_ICON"
                         resourceValue="/moqui.ico"/>

    <!-- Default Root Browse Category -->
    <ProductCategory productCategoryId="POPC_BROWSE_ROOT" productCategoryTypeEnumId="CATALOG_CATEGORY"
                     categoryName="POP Commerce Browse Root"/>
    <!-- Default Home Page Category -->
    <ProductCategory productCategoryId="POPC_HOME" productCategoryTypeEnumId="CATALOG_CATEGORY"
                     categoryName="POP Commerce Home Page"/>
</entity-facade-xml>
