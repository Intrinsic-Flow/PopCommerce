<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-title="Dashboard" default-menu-index="1" menu-image="glyphicon glyphicon-dashboard" menu-image-type="icon">

    <transition name="search"><default-response url="../Search"/></transition>
    <transition name="quickLookup"><default-response url="../QuickLookup"/></transition>

    <transition name="Reports"><default-response url="../Accounting/Reports"/></transition>

    <widgets>
        <container-row>
            <row-col lg="6" style="text-center">
                <form-single name="SearchOptions" transition="search" extends="component://SimpleScreens/screen/SimpleScreens/Search.xml#SearchOptions">
                    <field name="queryString"><default-field><text-line size="30"/></default-field></field>
                </form-single>
            </row-col>
            <row-col lg="6" style="text-center">
                <form-single name="QuickLookupForm" transition="quickLookup" extends="component://SimpleScreens/screen/SimpleScreens/QuickLookup.xml#QuickLookupForm"/>
            </row-col>
        </container-row>

        <container-row>
            <row-col md="2">
                <label text="Operate" type="h3"/>
                <container>
                    <link url="../Supplier" link-type="anchor"><image url="/popc/static/images/Supplier.png" url-type="screen" style="invertible"/></link>
                    <link text="Suppliers" url="../Supplier" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Order" link-type="anchor" parameter-map="[orderType:'Purchase']">
                        <image url="/popc/static/images/Purchasing.png" url-type="screen" style="invertible"/></link>
                    <link text="Purchasing" url="../Order" link-type="anchor" parameter-map="[orderType:'Purchase']"/>
                </container>
                <container>
                    <link url="../Shipment" link-type="anchor" parameter-map="[parentShipmentType:'ShpTpIncoming']">
                        <image url="/popc/static/images/Receiving.png" url-type="screen" style="invertible"/></link>
                    <link text="Receiving" url="../Shipment" link-type="anchor" parameter-map="[parentShipmentType:'ShpTpIncoming']"/>
                </container>
                <container>
                    <link url="../Asset" link-type="anchor" parameter-map="[assetTypeEnumId:'AstTpInventory']">
                        <image url="/popc/static/images/Inventory.png" url-type="screen" style="invertible"/></link>
                    <link text="Inventory" url="../Asset" link-type="anchor" parameter-map="[assetTypeEnumId:'AstTpInventory']"/>
                </container>

                <container>
                    <link url="../Customer" link-type="anchor"><image url="/popc/static/images/Customer.png" url-type="screen" style="invertible"/></link>
                    <link text="Customers" url="../Customer" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Order" link-type="anchor" parameter-map="[orderType:'Sales']">
                        <image url="/popc/static/images/Sales.png" url-type="screen" style="invertible"/></link>
                    <link text="Sales" url="../Order" link-type="anchor" parameter-map="[orderType:'Sales']"/>
                </container>
                <container>
                    <link url="../Picking" link-type="anchor">
                        <image url="/popc/static/images/Picking.png" url-type="screen" style="invertible"/></link>
                    <link text="Picking" url="../Picking" link-type="anchor"/>
                </container>
                <container>
                    <link url="../Shipment" link-type="anchor" parameter-map="[parentShipmentType:'ShpTpOutgoing']">
                        <image url="/popc/static/images/Shipping.png" url-type="screen" style="invertible"/></link>
                    <link text="Shipping" url="../Shipment" link-type="anchor" parameter-map="[parentShipmentType:'ShpTpOutgoing']"/>
                </container>
            </row-col>

            <row-col md="8">
            </row-col>

            <row-col md="2" style="text-right">
                <label text="Manage" type="h3"/>
                <container>
                    <link text="Catalog" url="../Catalog" link-type="anchor"/>
                    <link url="../Catalog" link-type="anchor"><image url="/popc/static/images/Catalog.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Facilities" url="../Facility" link-type="anchor"/>
                    <link url="../Facility" link-type="anchor"><image url="/popc/static/images/Facility.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Assets" url="../Asset" link-type="anchor"/>
                    <link url="../Asset" link-type="anchor"><image url="/popc/static/images/Asset.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Vendors" url="../Vendor" link-type="anchor"/>
                    <link url="../Vendor" link-type="anchor"><image url="/popc/static/images/Vendor.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Parties" url="../Party" link-type="anchor"/>
                    <link url="../Party" link-type="anchor"><image url="/popc/static/images/Parties.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Accounting" url="../Accounting" link-type="anchor"/>
                    <link url="../Accounting" link-type="anchor"><image url="/popc/static/images/Accounting.png" url-type="screen" style="invertible"/></link>
                </container>
                <container>
                    <link text="Reports" url="Reports" link-type="anchor"/>
                    <link url="Reports" link-type="anchor"><image url="/popc/static/images/Reports.png" url-type="screen" style="invertible"/></link>
                </container>
            </row-col>
        </container-row>
    </widgets>
</screen>
