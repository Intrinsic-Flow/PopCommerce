<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-include="false" require-authentication="false">

    <transition name="login">
        <actions><script>ec.user.loginUser(username, password, null)</script></actions>
        <default-response type="screen-last"/>
        <error-response url="."/>
    </transition>
    <transition name="logout">
        <actions><script>ec.user.logoutUser()</script></actions>
        <default-response url="/"/>
        <error-response url="."/>
    </transition>
    <transition name="resetPassword">
        <service-call name="org.moqui.impl.UserServices.reset#Password"/>
        <default-response url="."/>
    </transition>
    <transition name="createAccount">
        <actions>

        </actions>
        <default-response url="../Login"/>
        <error-response url="."/>
    </transition>

    <widgets>
        <container id="login-box">
            <form-single name="login" transition="login">
                <field name="username"><default-field><text-line size="20"/></default-field></field>
                <field name="password"><default-field><password size="20"/></default-field></field>
                <field name="submit"><default-field title="Login"><submit/></default-field></field>
            </form-single>
            <container-dialog id="reset-password" button-text="Forgot Password">
                <form-single name="resetPassword" transition="resetPassword">
                    <field name="username"><default-field><text-line size="20"/></default-field></field>
                    <field name="submit"><default-field title="Reset and Email"><submit/></default-field></field>
                </form-single>
            </container-dialog>
            <container-dialog id="create-account" button-text="Create Account">
                <form-single name="createAccount" transition="createAccount">
                    <field name="firstName"><default-field title="Name"><text-line size="15"/></default-field></field>
                    <field name="middleName"><default-field title=""><text-line size="2"/></default-field></field>
                    <field name="lastName"><default-field title=""><text-line size="15"/></default-field></field>

                    <!-- on second though, no address or phone required for new account, leave to use in checkout/profile:
                    <field name="countryGeoId"><default-field title="Country">
                        <drop-down allow-empty="false">
                            <entity-options key="geoId" text="${geoName} (${geoCodeAlpha3})">
                                <entity-find entity-name="Geo" cache="true">
                                    <econdition field-name="geoTypeEnumId" value="GEOT_COUNTRY"/>
                                    <order-by field-name="geoName"/>
                                </entity-find>
                            </entity-options>
                        </drop-down>
                    </default-field></field>
                    <field name="address1"><default-field><text-line size="20"/></default-field></field>
                    <field name="address2"><default-field><text-line size="20"/></default-field></field>
                    <field name="city"><default-field><text-line size="20"/></default-field></field>
                    <field name="stateProvinceGeoId"><default-field title="State">
                        <!- - TODO: add states to mantle, change to drop-down - ->
                        <text-line size="20"/>
                    </default-field></field>
                    <field name="postalCode"><default-field><text-line size="10"/></default-field></field>

                    <field name="areaCode"><default-field title="Phone"><text-line size="3" maxlength="3"/></default-field></field>
                    <field name="contactNumber"><default-field title=""><text-line size="8" maxlength="8"/></default-field></field>
                    -->

                    <field name="emailAddress"><default-field><text-line size="30"/></default-field></field>
                    <field name="newPassword"><default-field><password size="15"/></default-field></field>
                    <field name="newPasswordVerify"><default-field><password size="15"/></default-field></field>
                    <field name="submit"><default-field title="Create"><submit/></default-field></field>

                    <field-layout>
                        <field-row><field-ref name="firstName"/><field-ref name="middleName"/><field-ref name="lastName"/></field-row>

                        <!--
                        <field-ref name="countryGeoId"/><field-ref name="address1"/><field-ref name="address2"/>
                        <field-row><field-ref name="city"/><field-ref name="stateProvinceGeoId"/><field-ref name="postalCode"/></field-row>

                        <field-row><field-ref name="areaCode"/><field-ref name="contactNumber"/></field-row>
                        -->

                        <field-ref name="emailAddress"/><field-ref name="newPassword"/><field-ref name="newPasswordVerify"/>

                        <field-ref name="submit"/>
                    </field-layout>
                </form-single>
            </container-dialog>
        </container>

        <!-- TODO create test customer account, change this to that username/password -->
        <!-- TODO remove this link when moving away from more of a testing mode, very convenient for now -->
        <link url="login" text="Test Login (John Doe)">
            <parameter name="username" value="john.doe"/>
            <parameter name="password" value="moqui"/>
        </link>
    </widgets>
</screen>
