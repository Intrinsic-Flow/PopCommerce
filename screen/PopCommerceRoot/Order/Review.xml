<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.3.xsd"
        require-authentication="true">

    <transition name="placeOrder">
        <actions>
            <service-call name="mantle.order.OrderServices.place#Order" in-map="[orderId:cartOrderId]"/>
            <script>ec.web.sessionAttributes.remove("cartOrderId")</script>
        </actions>
        <default-response url="../../Customer/OrderDetail">
            <parameter name="orderId" from="cartOrderId"/>
        </default-response>
    </transition>

    <actions>
        <service-call name="mantle.order.OrderServices.get#OrderDisplayInfo" in-map="[orderId:cartOrderId]" out-map="context"/>
    </actions>
    <widgets>
        <label text="Review Order #${cartOrderId}" type="h1"/>

        <!-- NOTE: this section-iterate is the same as on OrderDetail.xml -->
        <section-iterate name="order-part-section" list="orderPartInfoList" entry="orderPartInfo">
            <widgets>
                <container-panel id="order-panel-${orderPartInfo.orderPart.orderPartSeqId}">
                    <panel-left>
                        <label text="Order Part ${orderPartInfo.orderPart.orderPartSeqId}" type="strong"/>
                        <label text="Part Total ${ec.l10n.formatCurrency(orderHeader?.grandTotal ?: 0, orderHeader?.currencyUomId, 2)}" type="p"/>

                        <!-- shipping info -->
                        <label text="${orderPartInfo.shipmentMethodEnum?.description ?: ''}" type="p"/>
                        <label text="${orderPartInfo.postalAddress?.toName ? 'To: ' + orderPartInfo.postalAddress?.toName : ''}" type="p"/>
                        <label text="${orderPartInfo.postalAddress?.attnName ? 'Attn: ' + orderPartInfo.postalAddress.attnName : ''}" type="p"/>
                        <label text="${orderPartInfo.postalAddress?.address1 ?: ''}${orderPartInfo.postalAddress?.unitNumber ? ' #' + orderPartInfo.postalAddress.unitNumber : ''}" type="p"/>
                        <label text="${orderPartInfo.postalAddress?.address2 ?: ''}" type="p"/>
                        <label text="${orderPartInfo.postalAddress?.city ? orderPartInfo.postalAddress?.city + ', ' : ''}${orderPartInfo.postalAddressStateGeo?.geoCodeAlpha2 ?: ''} ${orderPartInfo.postalAddress?.postalCode ?: ''}${orderPartInfo.postalAddress?.postalCodeExt ? '-' + orderPartInfo.postalAddress.postalCodeExt : ''}" type="p"/>
                        <label text="${orderPartInfo.telecomNumber?.areaCode ? '(' + orderPartInfo.telecomNumber?.areaCode + ') ' : ''}${orderPartInfo.telecomNumber?.contactNumber ?: ''}" type="p"/>
                    </panel-left>
                    <panel-center>
                        <!-- payment info -->
                        <section-iterate name="payment-info-${orderPartInfo.orderPart.orderPartSeqId}"
                                list="orderPartInfo.partPaymentInfoList" entry="partPaymentInfo">
                            <widgets>
                                <label text="${partPaymentInfo.paymentMethodTypeEnum?.description}" type="p"/>
                                <label text="${ec.l10n.formatCurrency(partPaymentInfo.partPayment.amount, partPaymentInfo.partPayment.amountUomId, 2)}" type="p"/>

                                <label text="${partPaymentInfo.creditCard?.firstNameOnCard} ${partPaymentInfo.creditCard?.lastNameOnCard}" type="p"/>
                                <!-- TODO: mask the cardNumber -->
                                <label text="${partPaymentInfo.creditCardTypeEnum?.description} ${partPaymentInfo.creditCard?.cardNumber} ${partPaymentInfo.creditCard?.expireDate}" type="p"/>
                                <label text="${partPaymentInfo.postalAddress.address1}${partPaymentInfo.postalAddress?.unitNumber ? ' #' + partPaymentInfo.postalAddress.unitNumber : ''}" type="p"/>
                                <label text="${partPaymentInfo.postalAddress?.address2 ?: ''}" type="p"/>
                                <label text="${partPaymentInfo.postalAddress?.city}, ${partPaymentInfo.postalAddressStateGeo?.geoCodeAlpha2} ${partPaymentInfo.postalAddress?.postalCode}${partPaymentInfo.postalAddress?.postalCodeExt ? '-' + partPaymentInfo.postalAddress.postalCodeExt : ''}" type="p"/>
                                <label text="(${partPaymentInfo.telecomNumber?.areaCode}) ${partPaymentInfo.telecomNumber?.contactNumber}" type="p"/>
                            </widgets>
                        </section-iterate>
                    </panel-center>
                    <panel-footer>
                        <form-list name="OrderItems" list="orderPartInfo.partOrderItemList" list-entry="orderItem" skip-start="true" skip-end="true">
                            <row-actions>
                                <service-call name="mantle.order.OrderServices.get#OrderItemTotal" in-map="[orderItem:orderItem]" out-map="orderItemTotalOut"/>
                                <script>context.putAll(orderItem)</script>
                            </row-actions>
                            <field name="productId"><default-field title="Product">
                                <display-entity entity-name="Product" text="${productName} [${productId}]" also-hidden="false"/>
                            </default-field></field>
                            <field name="unitAmount"><default-field><display currency-unit-field="orderHeader.currencyUomId"/></default-field></field>
                            <field name="quantity"><default-field><display/></default-field></field>
                            <field name="itemTotal"><default-field>
                                <display text="${ec.l10n.formatCurrency(orderItemTotalOut.itemTotal, orderHeader.currencyUomId, 2)}" also-hidden="false"/>
                            </default-field></field>
                        </form-list>
                    </panel-footer>
                </container-panel>

            </widgets>
        </section-iterate>

        <label text="Order Total: ${ec.l10n.formatCurrency(orderHeader?.grandTotal ?: 0, orderHeader?.currencyUomId, 2)}" type="h3"/>

        <container>
            <link text="Place Order" link-type="hidden-form" url="placeOrder"/>
        </container>
    </widgets>
</screen>
